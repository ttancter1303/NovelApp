<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment.SettingFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textSize="20dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txt_setting_tutruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/user_text_option"
        android:background="@drawable/text_line"
        android:text="Tủ truyện" />

    <TextView
        android:id="@+id/txt_setting_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_line"
        style="@style/user_text_option"
        android:text="Thông báo" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_nightmode"
        style="@style/user_text_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/text_line"
        android:text="Night mode" />


</LinearLayout>